function [ error, splitR, splitC, label0, label1 ] = decision_stump( train_data, labels, weights )

        error = Inf;
    	splitR = 1;
        splitC = 1;
        
        num_trainex = length(labels);
        
        [r, c, 
        
        for i = 1 : num_trainex
            double e = 0.0;
        
            ind0 = find(train_data(splitR,splitC,:) == 0);
        
            ind1 = find(train_data(splitR,splitC,:));
        
            labels0 = labels(ind0);
            num0 = length(labels0);
            num1 = num_trainex - num0;
            labels1 = labels(ind1);
        
            count0 = zeros(1, 9);
        
            count1 = zeros(1, 9);
        
            for a = 1 : num0
                count0(labels0(a)) = count0(labels0(a)) + 1;
            end
       
            for a = 1 : num1
                count1(labels1(a)) = count1(labels1(a)) + 1;
            end
        
            [~, l0] = max(count0);
        
            [~, l1] = max(count1);
            
            
            
        
        end


end

